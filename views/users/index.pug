form.seach-form(action="/users/search")
  input(name="name", type="text", placeholder="name")
  input(name="age", type="text", placeholder="age")
  input(type="submit")

.users
  h2 All users
  if users.length > 0
  table
    thead
      tr
        th  Name 
        th  Email 
        th  Age 
    tbody
    each user in users
      tr
        td= user.name 
        td= user.email 
        td=  user.age
        td 
          a(href="/users/" + user.id) View
    
    
    
    else 
      p No user to display